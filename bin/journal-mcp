#!/usr/bin/env python3
"""Journal MCP server launcher.

This script launches the Journal MCP server. It can be symlinked to a location
in your PATH (e.g., ~/.local/bin/) for easy access.

Environment variables:
    JOURNAL_DB_PATH: Path to the SQLite database (default: ../journal.db relative to script)
    PYTHONPATH: Should include the src/ directory if not running from project root
"""
import os
import sys
from pathlib import Path

# Determine project root from script location
SCRIPT_DIR = Path(__file__).resolve().parent
PROJECT_ROOT = SCRIPT_DIR.parent

# Set default database path if not specified
os.environ.setdefault(
    "JOURNAL_DB_PATH",
    str(PROJECT_ROOT / "journal.db")
)

# Add src directory to Python path for module imports
src_dir = str(PROJECT_ROOT / "src")
if src_dir not in sys.path:
    sys.path.insert(0, src_dir)

from journal_mcp.server import main

if __name__ == '__main__':
    sys.exit(main())
